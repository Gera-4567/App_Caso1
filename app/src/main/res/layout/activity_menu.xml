<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aqua Alert"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#000" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="138dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/img_alerta2"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depositos"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:onClick="depositos"
            android:layout_margin="20dp"
            android:padding="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presas"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:onClick="presas"
            android:padding="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanques"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:onClick="tanques"
            android:padding="20dp" />

        <ImageView
            android:layout_width="187dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="logout"
            android:src="@drawable/img_logout_2" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>